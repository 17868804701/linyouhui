page {
  background-color: #efeff4;
}
icon{
  display: flex;
  margin-left:4.6px;
  align-items: center;
}
.shoppingCart-container {
  width: 100%;
}

.shoppingCart-container .hasGood {
  width: 100%;
}

.shoppingCart-container .hasGood .goodList {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.shoppingCart-container .hasGood .goodList .view {
  /*flex: 1;*/
  width: 100%;
  height: 250rpx;
  margin-top: 20px;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  background-color: #fff;
}
.shoppingCart-container .hasGood .goodList .view .address{
  width: 100%;
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  font-size:12px;
  margin-left: 20rpx;
  margin-right: 40rpx;
  flex-wrap: nowrap;
}
.shoppingCart-container .hasGood .goodList .view .address view{
  width: 80%;
  flex-wrap: wrap;
}
.shoppingCart-container .hasGood .goodList .view .address view text{
  width: 100%;
  margin-left: 4rpx;
  margin-right: 4rpx;
  flex-wrap: warp;
}
.shoppingCart-container .hasGood .goodList .view .pic {
  flex: 1;
  margin-left: 10rpx;
  margin-right: 20rpx;
  border: 1px solid #fff;
}

.shoppingCart-container .hasGood .goodList .view .pic image {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  vertical-align: middle;
}

.shoppingCart-container .hasGood .goodList .view .info {
  flex: 3;
  font-size: 12px;
  line-height: 36rpx;
  color: #212121;
  padding-right: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.number {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.number .price {
  text-align: center;
  color: #fd544a;
  font-weight: 900;
}

.quantity {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.quantity text {
  background-color: #f2f2f2;
  margin: 5px;
  width: 26px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  font-weight: 900;
  color: #939393;
}

.quantity input {
  width: 30px;
  height: 26px;
  text-align: center;
  background-color: #f2f2f2;
}

.shoppingCart-container .hasGood .footer {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.shoppingCart-container .hasGood .footer ul {
  display: flex;
  flex-direction: row;
}

.shoppingCart-container .hasGood .footer ul .goodAll {
  line-height: 100rpx;
  color: #888;
  font-size: 14px;
  margin-left: 20rpx;
  flex: 1;
}

.shoppingCart-container .hasGood .footer ul .goodAll text {
  font-weight: bold;
  color: red;
}

.shoppingCart-container .hasGood .footer ul .calcute text {
  display: block;
  margin: 0 auto;
  width: 160rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #ff2501;
  color: #fff;
  font-size: 16px;
  text-align: center;
  flex: 1;
}

.modal-close {
  color: #939393;
    width: 32rpx;
    height: 32rpx;
    margin-top: 10rpx;
    margin-right: 10rpx;
}

/*商品标题*/

.title {
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  text-overflow: ellipsis;
  color: #333;
  /*height: 36px;*/
}

.tit-content {
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.spec {
  justify-content: flex-start;
  font-size: 6rpx;
}
