.carts-image {
  width: 120rpx;
  height: 120rpx;
  display: block;
  border-radius: 5px;
  margin-right: 10px;
}
.carts-content{
  display: flex;
  flex-direction: column;
  flex: 1;
}
.carts-title{
  font-size: 14px;
  font-weight: bold;
}
.weui-cell {
padding:0px 15px 10px 15px;
position:relative;
display:-webkit-box;
display:-webkit-flex;
display:flex;
-webkit-box-align:center;
-webkit-align-items:center;
align-items:center;
height: 200rpx;
}
.padding-wrap {
  padding:0px 15px;

}


.carts-price{
  font-size: 14px;
  display: flex;
  color: red;
}
.carts-sale{
  display: flex;
  flex-direction: column;
}
.carts-spec{
  font-size: 12px;
  margin-left:140rpx; 
  position: absolute;
  margin-top: 80rpx;
  display: block;
}
.carts-sale text{
  font-size: 12px;
  margin-right: 20rpx;
}
.carts-btn button{
  width: 150rpx;
  height: 50rpx;
  margin-top: 10rpx;
  line-height: 50rpx;
  font-size: 14px;
}

.upbtn{
  background: red;
  color: #fff;
}
.downbtn{
  color: #fff;
  background: green
}
.list{padding:10px;display: flex;flex-direction: row; justify-content: center;overflow: hidden;overflow-x: hidden;flex-wrap:wrap;}
.list .item {padding: 10px 0;border-bottom: 1px solid #f0f0f0;width: 100%;height: 140rpx;display: flex;flex-direction: row;}
 .list .item .user-info{width: 40%;height:200rpx;display: flex; margin-top: 20rpx;}
 .list .item .avatar{width: 40px;height: 40px;overflow: hidden;border-radius: 50%;margin-right: 10px;}
 .list .item .user-info .name{font-size:15px;color: #666;}
 .list .item .user-info .age{font-size:12px;color: #999;}
 .list .item .user-info .star-level{text-indent: -9999px;}
 .list .item .user-info .comment-time{font-size:12px;color: #ccc;}
 .list .item .comment{display: flex;flex-direction: column;align-items: center;}
 .list .item .comment .text{padding: 10px 0;font-size:14px;color: #666;}
 .list .item .comment .pics{padding-bottom: 10px;justify-content: flex-start;overflow-x: auto;white-space: nowrap;font-size:0;
}
.list .item .comment .pic:last-child{margin-right: 0;}
 .list .item .shop-reply{color: #999;font-size:12px;background-color: #f7f7f7;padding: 10px;margin-bottom: 10px;}
 .list .item .status{color: #ccc;font-size:12px;}
 .list .item .sku{color: #999;font-size:12px;margin-left: 10px;}




