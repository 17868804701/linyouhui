/* index.wxss */
page {
  background-color: #efeff4;
}
.item {
  background-color: #fff;
  width: 95%;
  display: flex;
  flex-direction: column;
  /*align-items: center;*/
  border-bottom: 1px solid gray;
  margin: 20rpx;
  border-radius: 12rpx;
}
.title{
      font-weight: bold;  
      display: flex;
      flex-direction: row;
      justify-content: center;
      margin-left: 20rpx;
      align-items: center;
}

.close-box {
    /*width: 110rpx;*/
    /*height: 220rpx;*/
    margin-right: 40rpx;
    padding-top: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    /*align-items: flex-end;*/
}

.close {
    width: 40rpx;
    height: 40rpx;
    /*background: gainsboro;*/
    z-index: 1000;
}

.content{
  font-size: 15px;
  width: 80%;
    display: flex;
    justify-content: space-between;
    margin: 20rpx 40rpx;
    /*margin-right: 50rpx;*/
}
.btn-box{
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  /*height: 80rpx;*/
  justify-content: center;
}
.btn{
  width: 60%;
  height: 80rpx;
  align-items: center;
  font-size: 15px;
}